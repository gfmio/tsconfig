{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    // Optimized for monorepo setups
    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,

    // Module resolution
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",

    // Performance optimizations
    "skipLibCheck": true,
    "assumeChangesOnlyAffectDirectDependencies": true
  }
}
