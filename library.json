{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    // Library configuration for maximum compatibility
    // Use NodeNext for dual ESM/CJS support
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    // Enable emission for library builds
    "noEmit": false,
    "allowImportingTsExtensions": false,

    // Type generation for published libraries
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": false
  }
}
