{
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[graphql]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[html]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  // Use Biome for JavaScript, TypeScript, JSON, CSS, etc.
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  // Show Biome status in the status bar
  "biome.configurationPath": "biome.json",
  "biome.lsp.bin": "node_modules/.bin/biome",

  // Organize imports on save
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit"
  },
  // Enable Biome as the default formatter
  "editor.defaultFormatter": "biomejs.biome",

  // Format on save
  "editor.formatOnSave": true,

  // Disable other formatters to avoid conflicts
  "editor.formatOnSaveMode": "file",
  "editor.insertSpaces": true,

  // // Editor settings to match Biome config
  // "editor.tabSize": 2,
  // "editor.useTabStops": false,

  // File associations
  "files.associations": {
    "*.json": "jsonc"
  },
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // Exclude build outputs from file watcher
  "files.watcherExclude": {
    "**/.next/**": true,
    "**/.turbo/**": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/dist/**": true,
    "**/node_modules/**": true,
    "**/out/**": true
  },

  // Exclude from search
  "search.exclude": {
    "**/.next": true,
    "**/.turbo": true,
    "**/*.min.css": true,
    "**/*.min.js": true,
    "**/build": true,
    "**/coverage": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/out": true
  }
}
