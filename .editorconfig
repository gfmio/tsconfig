# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 120

# JavaScript, TypeScript, and related files
[*.{js,jsx,ts,tsx,mjs,cjs,mts,cts}]
indent_style = space
indent_size = 2
quote_type = single

# JSON, JSONC, JSON5
[*.{json,jsonc,json5}]
indent_style = space
indent_size = 2
insert_final_newline = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# HTML, XML, and templating
[*.{html,htm,xml,svg,vue}]
indent_style = space
indent_size = 2

# CSS, SCSS, SASS, LESS
[*.{css,scss,sass,less,styl}]
indent_style = space
indent_size = 2

# Python files
[*.{py,pyw,pyx,pxd,pxi}]
indent_style = space
indent_size = 4
max_line_length = 88

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Makefiles
[{Makefile,makefile,*.mk,*.mak,GNUmakefile}]
indent_style = tab
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh,fish}]
indent_style = space
indent_size = 2

# Batch files
[*.{bat,cmd}]
end_of_line = crlf
indent_style = space
indent_size = 2

# PowerShell
[*.{ps1,psd1,psm1}]
indent_style = space
indent_size = 4
end_of_line = crlf

# Ruby files
[*.{rb,rbw,rake,gemspec,podspec,thor,jbuilder}]
