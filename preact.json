{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./app.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": ["preact"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"]

    // Note: To use React libraries with Preact, configure path aliasing in your bundler:
    // - Vite: Add alias in vite.config.ts
    // - Webpack: Add resolve.alias in webpack.config.js
    // - esbuild: Use --alias flag
    // Example (Vite):
    //   resolve: {
    //     alias: {
    //       'react': 'preact/compat',
    //       'react-dom': 'preact/compat'
    //     }
    //   }
  }
}