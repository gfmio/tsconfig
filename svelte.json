{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./app.json",
  "compilerOptions": {
    "types": ["svelte"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true
  }
}