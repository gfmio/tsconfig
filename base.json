{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    // Note: JSX settings should be configured in framework-specific configs
    // "jsx": "react-jsx",
    "allowJs": false,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,

    // Declaration generation (commented out - only relevant when noEmit: false)
    // These should be enabled in configs that actually emit files (e.g., library.json, node.json)
    // "declaration": true,
    // "declarationMap": true,
    // "sourceMap": true,
    // "emitDeclarationOnly": false,

    // Emit settings (relevant when noEmit: false)
    "removeComments": false,
    "importHelpers": false,
    "importsNotUsedAsValues": "remove",
    "downlevelIteration": true,
    "newLine": "lf",

    // ============================================================================
    // MAXIMUM STRICTNESS SETTINGS
    // ============================================================================

    // Core strict mode - enables all strict type checking options
    "strict": true,
    // Individual strict flags (included in strict but listed for clarity)
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,

    // Additional strictness checks
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitOverride": true,

    // Code quality checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // Module and resolution strictness
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "customConditions": [],

    // Error handling and output improvements
    "noErrorTruncation": true,
    "preserveWatchOutput": false,
    "pretty": true,
    "listEmittedFiles": false,
    "listFiles": false,

    // Watch mode optimizations
    "assumeChangesOnlyAffectDirectDependencies": false,

    // Additional safety checks
    // Note: checkJs is disabled by default. Enable in checkjs.json if needed.
    // "checkJs": true,
    "allowArbitraryExtensions": false,
    "allowUmdGlobalAccess": false,

    // Skip lib check for performance (but still maintain strict type checking)
    "skipLibCheck": true,
    "skipDefaultLibCheck": false
  }
}
