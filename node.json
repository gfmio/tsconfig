{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "allowJs": true,

    // Node.js-specific settings
    "lib": [
      "ES2022"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,
    "target": "ES2022",
    "types": [
      "node"
    ]
  },
  "extends": "./base.json"
}
