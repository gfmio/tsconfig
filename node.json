{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "allowJs": true,
    "types": ["node"],

    // Node.js-specific settings
    "lib": ["ES2022"],
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true
  }
}
