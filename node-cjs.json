{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./node.json",
  "compilerOptions": {
    // Legacy CommonJS Node.js configuration
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "target": "ES2022",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
