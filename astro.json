{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "astro",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "types": [
      "astro/client"
    ]
  },
  "extends": "./base.json"
}
